{
  "expo": {
    "name": "Find My Room",
    "slug": "findmyroom",
    "scheme": "findmyroom",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appicon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow FindMyRoom to access your location to show nearby rooms."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyBgiCLAP-jjpVMWbwyaYQ06Uzwj6FL0AKs"
      }
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./assets/appicon.png",
        
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.collegeproject.findmyroom",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBgiCLAP-jjpVMWbwyaYQ06Uzwj6FL0AKs"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationWhenInUseAndAlways": "Allow findmyroom to use your location to show nearby rooms."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0c6d7f7f-a2ad-4aad-93d4-1426b4ebe973"
      }
    }
  }
}
